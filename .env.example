# Environment Variables Template - DesarrolloPersonal
# Copy this file to .env and fill in the actual values

# =======================
# NODE ENVIRONMENT
# =======================
NODE_ENV=production
PORT=3010

# =======================
# DATABASE CONFIGURATION
# =======================
# MySQL database connection string
# Format: mysql://username:password@host:port/database_name?options
DATABASE_URL="mysql://username:password@localhost:3307/desarrollopersonal_db?charset=utf8mb4&collation=utf8mb4_unicode_ci"

# =======================
# CLERK AUTHENTICATION
# =======================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_live_your_publishable_key_here"
CLERK_SECRET_KEY="sk_live_your_secret_key_here"

# Clerk URL Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="https://your-domain.com/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="https://your-domain.com/dashboard"

# =======================
# BUNNY.NET CDN STORAGE
# =======================
# Content delivery network configuration
BUNNY_STORAGE_ZONE_NAME="your_storage_zone"
BUNNY_HOSTNAME="br.storage.bunnycdn.com"
BUNNY_USERNAME="your_bunny_username"
BUNNY_PASSWORD="your_bunny_password"
NEXT_PUBLIC_BUNNY_CDN_URL="https://your-domain.b-cdn.net"

# =======================
# PAYU LATAM PAYMENT PROCESSING
# =======================
# Get these from PayU Latam Dashboard
PAYU_API_URL="https://sandbox.api.payulatam.com"  # Use https://api.payulatam.com for production
PAYU_MERCHANT_ID="your_merchant_id"
PAYU_ACCOUNT_ID="your_account_id"
PAYU_API_KEY="your_api_key"
PAYU_API_LOGIN="your_api_login"

# =======================
# STRIPE PAYMENT PROCESSING (LEGACY)
# =======================
# Get these from https://dashboard.stripe.com
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# =======================
# APPLICATION CONFIGURATION
# =======================
# Your domain URL
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Security
NEXTAUTH_SECRET="your_nextauth_secret_here"

# =======================
# OPTIONAL FEATURES
# =======================
# Analytics
GOOGLE_ANALYTICS_ID=""
HOTJAR_ID=""

# Email (if using)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# =======================
# NOTES
# =======================
# - Never commit this file with real values to version control
# - Use strong, unique passwords for all services
# - Rotate secrets regularly
# - Test all configurations in staging before production