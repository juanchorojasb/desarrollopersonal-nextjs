generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  clerkId           String?   @unique
  email             String    @unique
  name              String?
  emailVerified     DateTime?
  image             String?
  hashedPassword    String?
  firstName         String?
  lastName          String?
  imageUrl          String?
  bio               String?   @db.Text
  subscriptionStatus String   @default("free")
  isAdmin           Boolean   @default(false)
  role              String    @default("user")

  enrollments       Enrollment[]
  lessonProgress    LessonProgress[]
  forumPosts        ForumPost[]
  forumReplies      ForumReply[]
  forumReactions    ForumReaction[]
  achievements      UserAchievement[]
  stats             UserStats?
  dailyActivities   DailyActivity[]
  notifications     Notification[]
  certificates      Certificate[]
  activityLogs     ActivityLog[]
  badges           UserBadge[]

  accounts          Account[]
  sessions          Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  category    String
  level       String
  duration    Int?
  price       Float    @default(0)
  instructor  String?
  imageUrl    String?
  requiredPlan String  @default("free")
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  modules     Module[]
  enrollments Enrollment[]
  certificates Certificate[]
}

model Module {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  position    Int
  courseId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course  Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons Lesson[]

  @@index([courseId])
}

model Lesson {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  videoUrl    String?
  content     String?  @db.Text
  duration    Int?
  position    Int
  moduleId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  module   Module           @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  progress LessonProgress[]

  @@index([moduleId])
}

model Enrollment {
  id               String    @id @default(cuid())
  userId           String
  courseId         String
  enrolledAt       DateTime  @default(now())
  completedAt      DateTime?
  progressPercentage Float   @default(0)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model LessonProgress {
  id              String   @id @default(cuid())
  userId          String
  lessonId        String
  isCompleted     Boolean  @default(false)
  watchTime       Int      @default(0)
  watchPercentage Float    @default(0)
  completedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

model ForumCategory {
  id          String      @id @default(cuid())
  name        String      @unique
  slug        String      @unique
  description String?     @db.Text
  icon        String?
  color       String?
  isActive    Boolean     @default(true)
  position    Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  posts       ForumPost[]
}

model ForumPost {
  id         String          @id @default(cuid())
  title      String
  content    String          @db.Text
  categoryId String
  userId     String
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  category   ForumCategory   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  replies    ForumReply[]
  reactions  ForumReaction[]

  @@index([userId])
  @@index([categoryId])
}

model ForumReply {
  id        String   @id @default(cuid())
  content   String   @db.Text
  postId    String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  post      ForumPost       @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  reactions ForumReaction[]

  @@index([postId])
  @@index([userId])
}

model ForumReaction {
  id        String   @id @default(cuid())
  type      String
  postId    String?
  replyId   String?
  userId    String
  createdAt DateTime @default(now())

  post  ForumPost?  @relation(fields: [postId], references: [id], onDelete: Cascade)
  reply ForumReply? @relation(fields: [replyId], references: [id], onDelete: Cascade)
  user  User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([replyId])
  @@index([userId])
}

model Achievement {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  icon        String
  category    String
  points      Int      @default(0)
  tier        String
  requirement Json
  createdAt   DateTime @default(now())
  
  unlockedBy UserAchievement[]
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())
  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  
  @@unique([userId, achievementId])
  @@index([userId])
}

model UserStats {
  id              String    @id @default(cuid())
  userId          String    @unique
  totalPoints     Int       @default(0)
  level           Int       @default(1)
  currentStreak   Int       @default(0)
  longestStreak   Int       @default(0)
  lastActiveDate  DateTime?
  coursesCompleted Int      @default(0)
  lessonsCompleted Int      @default(0)
  forumPosts      Int       @default(0)
  forumReplies    Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DailyActivity {
  id         String   @id @default(cuid())
  userId     String
  date       DateTime @db.Date
  points     Int      @default(0)
  activities Json
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // achievement, reply, course_complete, streak, admin
  title     String
  message   String   @db.Text
  link      String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}

model Certificate {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  courseName  String
  userName    String
  issuedAt    DateTime @default(now())
  pdfUrl      String?
  
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  activityType String  // lesson_view, course_view, forum_view
  resourceId  String?  // ID del recurso (lesson, course, post)
  duration    Int?     // Duraci√≥n en segundos
  timestamp   DateTime @default(now())
  metadata    Json?    // Datos adicionales
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([activityType])
  @@index([timestamp])
}

model Badge {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  icon        String   // Emoji o URL
  category    String   // skill, milestone, special, seasonal
  rarity      String   // common, rare, epic, legendary
  color       String   // Color hex del badge
  requirement Json     // Condiciones para desbloquear
  createdAt   DateTime @default(now())
  
  unlockedBy UserBadge[]
  
  @@index([category])
  @@index([rarity])
}

model UserBadge {
  id          String   @id @default(cuid())
  userId      String
  badgeId     String
  unlockedAt  DateTime @default(now())
  isFavorite  Boolean  @default(false)
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, badgeId])
  @@index([userId])
  @@index([isFavorite])
}
